<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GLADJUNIOR" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/GladBlue</item>
        <item name="colorPrimaryVariant">@color/red_glad</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/GladBlue</item>
        <item name="colorSecondaryVariant">@color/red_glad</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/GladBlue</item>
        <item name="android:windowActionBar">@color/GladBlue</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.GLADJUNIOR.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GLADJUNIOR.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar"/>
    <style name="Theme.GLADJUNIOR.PopUpOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>